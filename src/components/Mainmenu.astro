---
export interface Props {
    typographycolor: string;
    backgroundcolor: string;
}
const { typographycolor, backgroundcolor } = Astro.props;
---

<nav class="Mainmenu">
    <a class="Mainmenu-ivanabreu Mainmenu--typo" href="/">IVAN ABREU</a>
    <div class="Mainmenu-Mainsections">
        <a class="Mainmenu-Mainsections-sectionmenu Mainmenu--typo" href="/work">WORK</a>
        <a class="Mainmenu-Mainsections-sectionmenu Mainmenu--typo" href="/biocv">BIO/CV</a>
        <a class="Mainmenu-Mainsections-sectionmenu Mainmenu--typo" href="/contact">CONTACT</a>
    </div>
</nav>

<style is:global define:vars={{ typographycolor, backgroundcolor }}>
    .Mainmenu {
        font-size: 0.8rem;
        position: fixed;
        left: 40px;
        top: 0px;
        z-index: 8;
        display: flex;
        gap: 6ch;
        align-items: center;
        background-color: var(--backgroundcolor);
        padding: 0.25em 0.25em;
        transition: all 0.6s ease-in-out;
    }

    .Mainmenu-ivanabreu {
        position: relative;
        font-weight: 600;
        padding: 0ch 0.5ch;
        color: var(--typographycolor);
        transition: all 0.6s ease-in-out;
    }

    .Mainmenu-span {
        font-size: 0.8rem;
        
        color: var(--typographycolor);
        transition: all 0.6s ease-in-out;
    }

    .Mainmenu--active::after {
        content: '/';
		position: absolute;
		left: 10%;
		top: -75%;  
        font-size: 2.2em;
        font-weight: 900;
        color: #ffffff;
		/* background-color: var(--typographycolor); */
        /* background-color: #FFFFFF; */
		/* height: 200%; */
		/* width: 100%;  */
        z-index: -1;
    }  

    /* .Mainmenu--active { */
        /* background-color: #FFFFFF !important; */

    /* } */

    .Mainmenu-Mainsections {
        position: relative;
        display: flex;
        gap: 1ch;
        align-items: center;
    }

    .Mainmenu-Mainsections-sectionmenu {
        position: relative;
        padding: 0ch 0.5ch;
        font-size: 0.75rem;
        font-weight: 400;
        color: var(--typographycolor);
        transition: all 0.6s ease-in-out;
    }
</style>